<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dreamwalker.knu2018.dteacher.Activity.SignUpCheckActivity">

    <TextView
        android:id="@+id/labelText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="아직 회원이 아니시네요 \n 회원가입을 하시면 \n 보다 많은 혜택을 받을 수 있습니다." />

    <info.hoang8f.widget.FButton
        android:id="@+id/signupButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelText"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:shadowColor="@color/fbutton_color_asbestos"
        android:text="이메일 회원 가입"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fButtonColor="@color/fbutton_color_orange" />

    <info.hoang8f.widget.FButton
        android:layout_centerHorizontal="true"
        android:layout_below="@id/signupButton"
        android:id="@+id/loginButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:shadowColor="@color/fbutton_color_asbestos"
        android:text="이메일 로그인하기"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fButtonColor="@color/fbutton_color_orange" />

</RelativeLayout>
