<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_setting_background"
    tools:context="com.dreamwalker.knu2018.dteacher.Activity.SettingActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/app_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonDeveloper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_ripple"
                android:drawableLeft="@drawable/ic_supervisor_account_black_24dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="개발자 정보" />
            <!--구분자-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:background="@color/PrimaryDark3" />

            <Button
                android:id="@+id/buttonVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_ripple"
                android:drawableLeft="@drawable/ic_error_black_24dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="버전 정보" />
            <!--구분자-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:background="@color/PrimaryDark3" />

            <Button
                android:id="@+id/buttonOpenSourceLicense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_ripple"
                android:drawableLeft="@drawable/ic_developer_board_black_24dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="오픈소스라이센스" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_info"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonUserPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_ripple"
                android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="프라이버시" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sync_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_info"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonWearable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_ripple"
                android:drawableLeft="@drawable/ic_watch_black_24dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="웨어러블 장비" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:background="@color/PrimaryDark3" />

            <Button
                android:id="@+id/buttonDiabetesDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_ripple"
                android:drawableLeft="@drawable/ic_developer_mode_black_24dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="혈당계" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:background="@color/PrimaryDark3" />

            <Button
                android:id="@+id/buttonMachine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_ripple"
                android:drawableLeft="@drawable/ic_settings_input_component_black_24dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="운동 기구" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sync_data"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_ripple"
                android:drawableLeft="@drawable/ic_help_outline_black_24dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="문의하기" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>