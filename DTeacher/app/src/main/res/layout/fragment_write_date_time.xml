<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dreamwalker.knu2018.dteacher.Fragment.WriteDateTimeFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_margin="14dp"
        android:background="@color/fbutton_color_silver"
        android:elevation="8dp"
        app:cardCornerRadius="6dp">
        <LinearLayout
            android:weightSum="4"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- TODO: Update blank fragment layout -->

            <TextView
                android:drawableEnd="@drawable/ic_settings_black_24dp"
                android:drawableRight="@drawable/ic_settings_black_24dp"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/dateTextLabel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="26sp"
                android:text="기록 날짜" />
            <TextView
                android:clickable="true"
                android:id="@+id/dateText"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/Accent3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="32sp"
                android:text="2018-02-7" />
            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:id="@+id/timeTextLabel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="26sp"
                android:gravity="center"
                android:text="기록 시간" />
            <TextView

                android:clickable="true"
                android:id="@+id/timeText"
                android:textColor="@color/Accent3"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="32sp"
                android:text="21:00:00" />

        </LinearLayout>

    </android.support.v7.widget.CardView>



</FrameLayout>
