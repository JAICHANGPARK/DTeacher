<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fbutton_color_midnight_blue"
    tools:context=".Activity.AboutDeveloperActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="me2.json"
                app:lottie_loop="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Made By DREAMWALKER"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <info.hoang8f.widget.FButton
                android:id="@+id/GithubButton"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:shadowColor="@color/fbutton_color_green_sea"
                android:text="Github"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:fButtonColor="@color/fbutton_color_turquoise" />

            <info.hoang8f.widget.FButton
                android:id="@+id/qiitaButton"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:shadowColor="@color/fbutton_color_green_sea"
                android:text="Qiita"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:fButtonColor="@color/fbutton_color_turquoise" />

            <info.hoang8f.widget.FButton
                android:id="@+id/instagramButton"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:shadowColor="@color/fbutton_color_green_sea"
                android:text="Instagram"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:fButtonColor="@color/fbutton_color_turquoise" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
